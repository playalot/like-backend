# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /signIn                     controllers.Application.signIn
GET     /signOut                    controllers.Application.signOut
POST    /authenticate/credentials   controllers.Application.authenticate

# API
GET     /admin/email                controllers.Application.getEmail
GET     /api/stats                  controllers.ApiController.stats
GET     /api/posts/:pg              controllers.ApiController.list(pg: Int)
GET     /api/user/:id/info          controllers.ApiController.userInfo(id: Long)
DELETE  /api/post/:id               controllers.ApiController.deletePost(id: Long)
DELETE  /api/mark/:id               controllers.ApiController.deleteMark(id: Long)
POST    /api/post/:id/recommend     controllers.ApiController.recommendPost(id: Long, status: Boolean ?= false)
DELETE  /api/post/:id/recommend     controllers.ApiController.recommendPost(id: Long, status: Boolean ?= true)
GET     /api/post/:id/recommend     controllers.ApiController.isPostRecommended(id: Long)
POST    /api/post/:id/invisible     controllers.ApiController.invisiblePost(id: Long, status: Boolean ?= false)
DELETE  /api/post/:id/invisible     controllers.ApiController.invisiblePost(id: Long, status: Boolean ?= true)
GET     /api/post/:id/invisible     controllers.ApiController.isPostInvisible(id: Long)

# Yeoman
GET      /                          controllers.YeomanController.index
GET      /home                      controllers.YeomanController.index
GET      /posts                     controllers.YeomanController.index
GET      /users                     controllers.YeomanController.index
GET      /*file                     controllers.YeomanController.at(file)


# GET     /recommend/:id              controllers.Application.recommend(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
